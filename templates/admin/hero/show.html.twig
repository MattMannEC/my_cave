{% extends 'admin/index.html.twig' %}

{% block title %}Hero{% endblock %}
    {% block childStyleSheets %}
            <link rel="stylesheet" href="/css/views/hero.css">
    {% endblock %}

{% block content %}

<section id="hero">
    <div class="container-fluid">
        <h2>Hero</h2>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ hero.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ hero.title }}</td>
                </tr>
                <tr>
                    <th>Text</th>
                    <td>{{ hero.text }}</td>
                </tr>
                <tr>
                    <th>Image_filename</th>
                    <td>{{ hero.imageFilename }}</td>
                </tr>
                <tr>
                    <th>Date_modified</th>
                    <td>{{ hero.dateModified ? hero.dateModified|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>
        
        <a class="action-link" href="{{ path('hero_index') }}">back to list</a>

        <a class="action-link" href="{{ path('hero_edit', {'id': hero.id}) }}">edit</a>

        {{ include('admin/hero/_delete_form.html.twig') }}
    </div>
</section>
{% endblock %}
