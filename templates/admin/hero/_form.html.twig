{{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.text) }}    <div class="row">
        <div class="col-sm-9">
                {{ form_row(form.image_filename, {
                    attr : {
                        placeholder: 'Select an image'
                    }
                }) }}
        </div>
        <div class="col-sm-3">
            {% if form.vars.data.imageFilename|default %}
                <img src="{{ form.vars.data.imagePath|imagine_filter('my_full') }}">
            {% endif %}
        </div>
    </div>
    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
