{% extends 'admin/index.html.twig' %}

{% block title %}User{% endblock %}
    {% block childStyleSheets %}
            <link rel="stylesheet" href="/css/views/admin.css">
            <link rel="stylesheet" href="/css/views/user.css">
    {% endblock %}

{% block content %}

<section id="user">
    <div class="container-fluid">
        <h2>User</h2>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Firstname</th>
                    <td>{{ user.firstname }}</td>
                </tr>
                <tr>
                    <th>Lastname</th>
                    <td>{{ user.lastname }}</td>
                </tr>
            </tbody>
        </table>

        <a class="action-link" href="{{ path('user_index') }}">back to list</a>

        <a class="action-link" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

        {{ include('admin/user/_delete_form.html.twig') }}
    </div>
</section>
{% endblock %}
