{% extends 'layout.html.twig' %}

{% block title %}Article{% endblock %}

    {% block childStyleSheets %}
            <link rel="stylesheet" href="/css/views/article.css">
    {% endblock %}
{% block content %}
<section id="article">
    <div class="container-fluid">
        <div class="col-md-12">
            <h1>{{ article.title }}</h1>
            <img src="{{ article.imagePath|imagine_filter('my_large') }}" alt="" class="article-image-large">
            <p>{{ article.text }}</p>
            <h6>{{ article.dateModified ? article.dateModified|date('Y-m-d H:i:s') : '' }}</h6>

            <a href="{{ path('home') }}">back to home</a>

        {% if is_granted('ROLE_ADMIN') %}
            <a class="action-link" href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
        {% endif %}
        </div>
    </div>
</section>

{% endblock %}
