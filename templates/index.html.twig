{% extends 'layout.html.twig' %}
{% block title %}Homepage{% endblock %}
{% block content %}
    <h2>This Page will be the Home Page</h2>

    <h1>Hero index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Text</th>
                <th>Image_filename</th>
                <th>Date_modified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hero in heroElements %}
            <tr>
                <td>{{ hero.id }}</td>
                <td>{{ hero.title }}</td>
                <td>{{ hero.text }}</td>
                <td><img src="{{ hero.imagePath }}"></img></td>
                <td>{{ hero.dateModified ? hero.dateModified|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('hero_show', {'id': hero.id}) }}">show</a>
                    <a href="{{ path('hero_edit', {'id': hero.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div id="homeSlider" data-slick='{"slidesToShow": 1, "slidesToScroll": 1, "autoplay": true, "autoplaySpeed": 5000, "arrows": true}'>
    {% for sliderElement in sliderElements %}
        <div>
            <h3>{{ sliderElement.name }}</h3>
            <h4>{{ sliderElement.region }} - {{ sliderElement.grape }}</h4>
            <img src="{{ sliderElement.imagePath|imagine_filter('my_full') }}" alt="wine">
            <p>{{ sliderElement.description }}</p>
        </div>
    {% else %}
        <tr>
            <div>
                <h3>no records found</h3>
            </div>
        </tr>
    {% endfor %}
    </div>
{% endblock %}