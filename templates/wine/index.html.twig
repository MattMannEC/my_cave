{% extends 'layout.html.twig' %}

{% block title %}Wine index{% endblock %}

{% block content %}
    <h1>This page will be the Wine Catalogue Page</h1>    
    <div class="row">
        <div class="col-sm-12"> 
            <h3>{{ pagination.getTotalItemCount }}</h3>
            <form>
                <div class="input-group mb-3">
                    <input type="text" name="q" class="form-control" placeholder="Search..." value="{{ app.request.query.get('q') }}">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-outline-secondary">
                            <span class="fa fa-search"></span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Vintage</th>
                <th>Grape</th>
                <th>Region</th>
                <th>image_path</th>
            </tr>
        </thead>
        <tbody>
        {% for wine in pagination %}
            <tr>
                <td>{{ wine.name }}</td>
                <td>{{ wine.vintage }}</td>
                <td>{{ wine.grape }}</td>
                <td>{{ wine.region }}</td>
                <td>
                    <img src="{{ wine.imagePath|imagine_filter('my_thumb') }}">
                </td>
                <td>
                    <a href="{{ path('wine_show', {'id': wine.id}) }}">show</a>

                    {% if app.user == true %}
                    <a href="{{ path('wine_edit', {'id': wine.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table> 
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>
    {% if app.user == true %}
    <a href="{{ path('wine_new') }}">Create new</a>
    {% endif %}
{% endblock %}
