{% extends 'layout.html.twig' %}

{% block title %}Edit Wine{% endblock %}
    {% block childStyleSheets %}
            <link rel="stylesheet" href="/css/views/collection/collection.css">
            <link rel="stylesheet" href="/css/views/collection/collection.media.css">
    {% endblock %}

{% block content %}
    <section id="collection">
        <div class="container-fluid">
            <h1>Edit Wine</h1>
                <a class="action-link" href="{{ path('wine') }}"><i class="fas fa-arrow-left"></i>  back to list</a>
                {{ include('wine/_form.html.twig', {'button_label': 'Update'}) }}
                <div class="col-md-12 d-flex justify-content-end">
                    {% if userId == wine.author %}
                    {{ include('wine/_delete_form.html.twig') }}
                    {% endif %}
                </div>
        </div>
    </section>
{% endblock %}
