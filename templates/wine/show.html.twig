{% extends 'layout.html.twig' %}

{% block title %}Wine{% endblock %}
    {% block childStyleSheets %}
            <link rel="stylesheet" href="/css/views/collection/collection.css">
            <link rel="stylesheet" href="/css/views/collection/collection.media.css">
    {% endblock %}

{% block content %}
    <section id="wineShowSection">
        <div class="container-fluid">
            <h1>Wine</h1>
            <a class="action-link" href="{{ path('wine') }}"><i class="fas fa-arrow-left"></i>  back to list</a>
            <div class="row">
                <div class="col-md-4">
                    <img src="{{ wine.imagePath|imagine_filter('my_normal') }}">
                </div>
                <div class="col-md-8">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Name</th>
                                <td>{{ wine.name }}</td>
                            </tr>
                            <tr>
                                <th>Vintage</th>
                                <td>{{ wine.vintage }}</td>
                            </tr>
                            <tr>
                                <th>Grape</th>
                                <td>{{ wine.grape }}</td>
                            </tr>
                            <tr>
                                <th>Country</th>
                                <td>{{ wine.country }}</td>
                            </tr>
                            <tr>
                                <th>Region</th>
                                <td>{{ wine.region }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ wine.description }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>                
            {% if app.user == true %}
            <div class="col-md-12 d-flex justify-content-between">

                <a class="action-link btn btn-bordeaux" href="{{ path('wine_edit', {'id': wine.id}) }}">edit</a>

                {{ include('wine/_delete_form.html.twig') }}
            </div>
            {% endif %}
        </div>
    </section>


{% endblock %}
